{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "language",
            "command": "dotnet",
            "type": "process",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/compiler/compiler.csproj",
                "--",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": {
                
                "fileLocation":"absolute",
                "pattern":[
                    {
                        "regexp": "([^()]*)\\((\\d+,\\d+,\\d+,\\d+)\\):([\\S\\s]*.*)$",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ],
                "owner": "compiler"
            },
        }
    ]
}